<%- include('partials/header', { activePage: 'add' }) %>

<div class="container">
  <div class="form-card">
    <h2>Add a New Expense</h2>

    <!-- validation errors -->
    <% if (errors && errors.length > 0) { %>
      <div class="errors">
        <%= errors.join('<br>') %>
      </div>
    <% } %>

    <!-- expense form -->
    <form action="/add" method="POST">
      <label>
        Title
        <input name="title" placeholder="e.g. Groceries" required>
      </label>

      <label>
        Amount
        <input type="number" name="amount" step="0.01" required>
      </label>

      <label>
        Category
        <input name="category" placeholder="e.g. Food, Travel, Bills">
      </label>

      <label>
        Date
        <input type="date" name="date" value="<%= new Date().toISOString().slice(0,10) %>">
      </label>

      <div class="form-actions">
        <button class="btn primary" type="submit">Add Expense</button>
        <a class="btn" href="/">Cancel</a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
